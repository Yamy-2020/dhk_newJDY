<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    >
    <TextView
        android:id="@+id/pd_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="12sp"
        android:textColor="@color/pd_message_time"
        android:background="@drawable/pd_message_time"
        />
    <LinearLayout
        android:id="@+id/pd_message_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        >
        <ImageView
            android:id="@+id/pd_message_portrait_l"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/pd_portrait_robot"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <FrameLayout
                android:id="@+id/pd_message_content_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
            </FrameLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                >
                <ImageView
                    android:id="@+id/pd_message_feedback_up"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_margin="4dp"
                    android:src="@drawable/pd_feedback_up"
                    />
                <ImageView
                    android:id="@+id/pd_message_feedback_down"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_margin="4dp"
                    android:src="@drawable/pd_feedback_down"
                    />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/pd_message_portrait_r"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/pd_portrait_user"
            />
    </LinearLayout>
</LinearLayout>