<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_public"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/blue_public">

        <TextView
            android:id="@+id/topTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="银联收款"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_20" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="-50dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/back_blur" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/payborder"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@drawable/payborder1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mpay" />

            <TextView
                android:id="@+id/navTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="银联二维码收款"
                android:textColor="@color/blue_public"
                android:textSize="@dimen/sp_18" />

        </LinearLayout>

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:gravity="center"
            android:text="打开银联产品，向我付钱"
            android:textColor="@color/bptext"
            android:textSize="@dimen/sp_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/img"
                android:layout_width="@dimen/dp_200"
                android:layout_height="@dimen/dp_200"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />
        </LinearLayout>

        <TextView
            android:id="@+id/mPay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:gravity="center"
            android:text="￥1.00"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_40"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/btn_pay1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center"
            android:text="重置金额"
            android:textColor="@color/blue_public"
            android:textSize="@dimen/sp_16" />


    </LinearLayout>

</LinearLayout>
