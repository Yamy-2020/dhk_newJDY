<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/corner8"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/dp_16"
        android:text="系统检测到你的账号正在异地登录,需要对注册手机号进行短信验证)"
        android:textColor="#333333"
        android:textSize="@dimen/sp_18" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16">

        <EditText
            android:id="@+id/et_get_code"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/title_hui_yuan"
            android:gravity="center_vertical"
            android:hint="请输入验证码"
            android:inputType="number"
            android:maxLength="6"
            android:padding="@dimen/dp_10"
            android:textColor="#333333"
            android:textColorHint="#666666"
            android:textSize="@dimen/sp_15" />

        <android.support.v4.widget.Space
            android:layout_width="@dimen/dp_10"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_get_code"
            android:layout_width="@dimen/dp_120"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_4"
            android:text="获取验证码"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_get_code_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_15"
        android:background="@drawable/corner12"
        android:gravity="center"
        android:padding="8dp"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16" />
</LinearLayout>