<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_line"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/head" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10">

                    <TextView
                        android:layout_width="@dimen/dp_120"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="信用卡卡号"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_14" />

                    <EditText
                        android:id="@+id/et_new_add_number"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:ellipsize="end"
                        android:hint="请输入信用卡卡号"
                        android:inputType="number"
                        android:maxLength="25"
                        android:singleLine="true"
                        android:textColor="#666666"
                        android:textColorHint="#999999"
                        android:textSize="@dimen/sp_14" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:layout_marginTop="-48dp"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10">

                    <TextView
                        android:id="@+id/img_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_plan"
                        android:text="拍照识别"
                        android:textColor="@color/blue_public"
                        android:textSize="@dimen/sp_14" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10">

                    <TextView
                        android:layout_width="@dimen/dp_120"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="开户银行"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_new_add_bank"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="center_vertical"
                        android:hint="请选择开户银行"
                        android:textColor="#666666"
                        android:textColorHint="#999999"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10">

                    <TextView
                        android:layout_width="@dimen/dp_120"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="信用卡有效期"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_14" />

                    <EditText
                        android:id="@+id/et_new_add_valid_date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="如:有效期 10/19 请填写1019"
                        android:inputType="number"
                        android:maxLength="4"
                        android:textColor="#666666"
                        android:textColorHint="#999999"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10">

                    <TextView
                        android:layout_width="@dimen/dp_120"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="账单日"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_new_add_statement_date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:ellipsize="end"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="center_vertical"
                        android:hint="请选择账单日"
                        android:singleLine="true"
                        android:textColor="#666666"
                        android:textColorHint="#999999"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10">

                    <TextView
                        android:layout_width="@dimen/dp_120"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="还款日"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_new_add_due_date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:ellipsize="end"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="center_vertical"
                        android:hint="请选择还款日"
                        android:singleLine="true"
                        android:textColor="#666666"
                        android:textColorHint="#999999"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10">

                    <TextView
                        android:layout_width="@dimen/dp_120"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="额度"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_14" />

                    <EditText
                        android:id="@+id/ed"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:ellipsize="end"
                        android:hint="请输入信用卡额度"
                        android:inputType="number"
                        android:maxLength="25"
                        android:singleLine="true"
                        android:textColor="#666666"
                        android:textColorHint="#999999"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10">

                    <TextView
                        android:layout_width="@dimen/dp_120"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="CVV2"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_14" />

                    <EditText
                        android:id="@+id/et_new_add_cvv2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="卡背面末三位"
                        android:inputType="numberPassword"
                        android:maxLength="3"
                        android:textColor="#666666"
                        android:textColorHint="#999999"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10">

                    <TextView
                        android:layout_width="@dimen/dp_120"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="预留手机号"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_14" />

                    <EditText
                        android:id="@+id/et_new_add_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:ellipsize="end"
                        android:hint="请输入预留手机号"
                        android:inputType="phone"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="#666666"
                        android:textColorHint="#999999"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10">

                    <TextView
                        android:layout_width="@dimen/dp_120"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="短信验证码"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_14" />

                    <EditText
                        android:id="@+id/et_new_add_verify_code"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_weight="1"
                        android:background="@null"
                        android:ellipsize="end"
                        android:hint="请输入验证码"
                        android:inputType="phone"
                        android:maxLength="4"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="#666666"
                        android:textColorHint="#999999"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_new_add_verify_code"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="center"
                        android:text="获取验证码"
                        android:textColor="@color/blue_21"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:gravity="center"
                    android:text="本系统安全已经过多重加密处理"
                    android:textColor="@color/red"
                    android:textSize="@dimen/sp_13" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="@dimen/dp_10">

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <TextView
            android:id="@+id/tv_add_new_credit_confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:background="@drawable/round_5dp_blue"
            android:gravity="center"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18" />
    </LinearLayout>

    <com.kym.ui.newutil.DragFloatActionButton
        android:id="@+id/circle_button"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_80"
        android:clickable="true"
        android:src="@drawable/tianjia" />

</RelativeLayout>