<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/lay_lb"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_52">

            <ImageView

                android:id="@+id/imageV_dj_xin"
                android:layout_width="@dimen/dp_42"
                android:layout_height="@dimen/dp_42"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:src="@drawable/image_home" />

            <TextView
                android:id="@+id/textV_mincheng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_toRightOf="@+id/imageV_dj_xin"
                android:textColor="#2F2F2F" />

            <TextView
                android:id="@+id/textV_lb_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textV_mincheng"
                android:layout_alignBottom="@+id/textV_mincheng"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/textV_mincheng"
                android:textColor="#ACACAC"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_1"
                android:src="@drawable/go" />

            <TextView
                android:id="@+id/textV_zhijie_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_toLeftOf="@+id/imageView2"
                android:textColor="@color/blue_2e"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/textV_jianjie_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_toLeftOf="@+id/imageView2"
                android:textColor="@color/blue_2e"
                android:textSize="@dimen/sp_13"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_17"
            android:layout_marginRight="@dimen/dp_10"
            android:background="#D8D8D8"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>