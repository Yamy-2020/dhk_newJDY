<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:elevation="5dp"
    android:background="@drawable/bg_home_plan">

    <TextView
        android:id="@+id/tv_new_home_plan_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="还款计划"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        app:layout_constraintBottom_toTopOf="@id/tv_new_home_top_plan_amount"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_new_home_top_plan_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6"
        android:singleLine="true"
        android:text="****"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18"
        app:layout_constraintBottom_toTopOf="@id/tv_new_home_top_bank_number"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_new_home_plan_string"
        tools:text="5000" />

    <TextView
        android:id="@+id/tv_new_home_top_bank_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="**** **** **** ***"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_17"
        app:layout_constraintBottom_toTopOf="@id/view_new_home_line"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_new_home_top_plan_amount"
        tools:text="6217 **** **** ***8 621" />

    <View
        android:id="@+id/view_new_home_line"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_6"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@id/tv_new_home_top_bank_name"
        app:layout_constraintLeft_toLeftOf="@id/tv_new_home_top_bank_name"
        app:layout_constraintRight_toRightOf="@id/tv_new_home_top_plan_percent"
        app:layout_constraintTop_toBottomOf="@id/tv_new_home_top_bank_number" />

    <TextView
        android:id="@+id/tv_new_home_top_bank_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6"
        android:text="********"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_new_home_split"
        app:layout_constraintTop_toBottomOf="@id/view_new_home_line"
        tools:text="中国建设银行" />

    <TextView
        android:id="@+id/tv_new_home_split"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:text="/"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_20"
        app:layout_constraintBottom_toBottomOf="@id/tv_new_home_top_bank_name"
        app:layout_constraintLeft_toRightOf="@id/tv_new_home_top_bank_name"
        app:layout_constraintRight_toLeftOf="@id/tv_new_home_top_plan_percent"
        app:layout_constraintTop_toTopOf="@id/tv_new_home_top_bank_name" />

    <TextView
        android:id="@+id/tv_new_home_top_plan_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前进度：*/*"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15"
        app:layout_constraintLeft_toRightOf="@id/tv_new_home_split"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_new_home_top_bank_name"
        tools:text="当前进度：1/3" />

    <TextView
        android:id="@+id/tv_new_home_top_bind_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/tv_new_home_top_bank_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_new_home_top_bank_name"
        tools:text="请添加您的信用卡" />

    <ImageView
        android:id="@+id/iv_new_home_top_arrow"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:layout_margin="@dimen/dp_10"
        android:src="@drawable/ico_arrow_white"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>