<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <include layout="@layout/head" />

    <RelativeLayout
        android:id="@+id/btn_yhk_xin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bg_shadow">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:drawableLeft="@drawable/zl_xyk"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center"
            android:text="基本信息"
            android:textColor="@color/black_33"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/jiben_xx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:drawablePadding="@dimen/dp_10"
            android:drawableRight="@drawable/dd_y"
            android:textColor="@color/red_f1" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_yhk_zp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bg_shadow">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:drawableLeft="@drawable/zl_cxk"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center"
            android:text="储蓄卡认证"
            android:textColor="@color/black_33"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/yhk_zp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:drawablePadding="@dimen/dp_10"
            android:drawableRight="@drawable/dd_y"
            android:textColor="@color/red" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_zz_zp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bg_shadow"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:drawableLeft="@drawable/zl_sh"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center"
            android:text="证件认证"
            android:textColor="@color/black_33"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/zz_zp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:drawablePadding="@dimen/dp_10"
            android:drawableRight="@drawable/dd_y"
            android:textColor="@color/red" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_33"
            android:layout_marginBottom="@dimen/dp_5"
            android:textSize="15sp"
            android:text="温馨提示"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_33"
            android:textSize="14sp"
            android:layout_marginBottom="@dimen/dp_5"
            android:text="1、已完善状态不需要重复完善;"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_33"
            android:textSize="14sp"
            android:layout_marginBottom="@dimen/dp_5"
            android:text="2、储蓄卡认证务必填写储蓄卡,不能填写信用卡;"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_33"
            android:textSize="14sp"
            android:layout_marginBottom="@dimen/dp_5"
            android:text="3、请确保信息的准确性,以免影响收款到账问题;"/>
    </LinearLayout>

</LinearLayout>