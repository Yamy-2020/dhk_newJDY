<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_62"
        android:background="#ffffff">

        <TextView
            android:id="@+id/textV_tixian_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/sp_15"
            android:visibility="gone"
            android:text="余额提现" />

        <TextView
            android:id="@+id/textV_tixian_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_7"
            android:textColor="#585858"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/textV_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_12"
            android:text="-0.00元"
            android:textSize="@dimen/sp_19" />

        <TextView
            android:id="@+id/textV_tixian_bank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textV_tixian_type"
            android:layout_alignBottom="@+id/textV_tixian_type"
            android:layout_marginLeft="@dimen/dp_10"

            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@+id/textV_tixian_type"
            android:textSize="@dimen/sp_15" />

        <ImageView
            android:id="@+id/imageV_sta"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/sp_12"

            android:layout_toLeftOf="@+id/textV_money" />

    </RelativeLayout>

</LinearLayout>