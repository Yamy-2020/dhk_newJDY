<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include
            layout="@layout/head"
            android:visibility="visible" />

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/login_topnew_two"
                        android:visibility="invisible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="3dp"
                        android:background="@null"
                        android:orientation="horizontal"
                        android:paddingBottom="2dp"
                        android:paddingLeft="2dp"
                        android:paddingTop="2dp">

                        <ImageView
                            android:id="@+id/phone_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@drawable/login_user_icon" />

                        <EditText
                            android:id="@+id/username_et"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:layout_toLeftOf="@+id/del_phone_iv"
                            android:layout_toRightOf="@id/phone_iv"
                            android:background="@null"
                            android:ems="10"
                            android:hint="@string/text_tel"
                            android:inputType="phone"
                            android:maxLength="25"
                            android:maxLines="1"
                            android:paddingLeft="14dp"
                            android:textColor="@color/text"
                            android:textColorHint="@color/text_hint"
                            android:textSize="16.0sp">

                            <requestFocus />
                        </EditText>


                    </RelativeLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="15dp"
                        android:background="#BFBFC3" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="8dp"
                        android:background="@null"
                        android:orientation="horizontal"
                        android:paddingLeft="2dp"
                        android:paddingTop="1dp">

                        <ImageView
                            android:id="@+id/idy_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@drawable/sign_nor_ver"
                            android:visibility="invisible" />

                        <EditText
                            android:id="@+id/confirmation_et"
                            android:layout_width="165dp"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:layout_toRightOf="@id/idy_iv"
                            android:background="@null"
                            android:ems="10"
                            android:hint="请输入短信验证码"
                            android:inputType="text"
                            android:maxLength="30"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/dp_10"
                            android:textColor="@color/text"
                            android:textColorHint="@color/text_hint"
                            android:textSize="16.0sp"></EditText>

                        <TextView
                            android:id="@+id/confirmation_code_tv"
                            android:layout_width="@dimen/confirmation_image_width"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:text="获取验证码"
                            android:textColor="@color/blue_21"
                            android:textSize="@dimen/goodname_tv" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="15dp"
                        android:background="#BFBFC3" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="8dp"
                        android:background="@null"
                        android:orientation="horizontal"
                        android:paddingLeft="2dp"
                        android:paddingTop="2dp">

                        <ImageView
                            android:id="@+id/password_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@drawable/login_pwd_icon" />

                        <EditText
                            android:id="@+id/password_et"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:layout_toLeftOf="@+id/del_password_iv"
                            android:layout_toRightOf="@id/password_iv"
                            android:background="@null"
                            android:ems="10"
                            android:hint="@string/set_password"
                            android:inputType="textPassword"
                            android:maxLength="30"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/dp_41"
                            android:textColor="@color/text"
                            android:textColorHint="@color/text_hint"
                            android:textSize="16.0sp"></EditText>

                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="15dp"
                        android:background="#BFBFC3" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="8dp"
                        android:background="@null"
                        android:orientation="horizontal"
                        android:paddingLeft="2dp"
                        android:paddingTop="2dp">

                        <ImageView
                            android:id="@+id/edit_share_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@drawable/sign_nor_cipher"
                            android:visibility="invisible" />

                        <EditText
                            android:id="@+id/edit_share_tel"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:layout_toLeftOf="@+id/del_edit_share_iv"
                            android:layout_toRightOf="@id/edit_share_iv"
                            android:background="@null"
                            android:ems="10"
                            android:hint="确认密码"
                            android:inputType="textPassword"
                            android:maxLength="30"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/dp_41"
                            android:textColor="@color/text"
                            android:textColorHint="@color/text_hint"
                            android:textSize="16.0sp"></EditText>

                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="15dp"
                        android:background="#BFBFC3" />


                </LinearLayout>

                <TextView
                    android:id="@+id/next_bt"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginTop="29dip"
                    android:background="@drawable/corner2"
                    android:gravity="center"
                    android:text="完成"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <LinearLayout
                    android:id="@+id/text_forget_dl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:padding="5dp"
                        android:text="账号登录"
                        android:textColor="@color/blue_21"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true">

    </RelativeLayout>

</RelativeLayout>