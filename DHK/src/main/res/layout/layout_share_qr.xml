<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_share_qr_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:text="分享到"
        android:textColor="#333333"
        android:textSize="@dimen/sp_15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_share_qr_wx_1"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_16"
        android:src="@drawable/ic_fx_wx"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/iv_share_qr_wx_2"
        app:layout_constraintTop_toBottomOf="@id/tv_share_qr_title" />

    <ImageView
        android:id="@+id/iv_share_qr_wx_2"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:src="@drawable/ic_fx_py"
        app:layout_constraintLeft_toRightOf="@id/iv_share_qr_wx_1"
        app:layout_constraintRight_toLeftOf="@id/iv_share_qr_save"
        app:layout_constraintTop_toTopOf="@id/iv_share_qr_wx_1" />

    <ImageView
        android:id="@+id/iv_share_qr_save"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:src="@drawable/ic_fx_bc"
        app:layout_constraintLeft_toRightOf="@id/iv_share_qr_wx_2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_share_qr_wx_1" />

    <TextView
        android:id="@+id/tv_share_qr_wx_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="微信好友"
        android:textColor="#333333"
        android:textSize="@dimen/sp_16"
        app:layout_constraintLeft_toLeftOf="@id/iv_share_qr_wx_1"
        app:layout_constraintRight_toRightOf="@id/iv_share_qr_wx_1"
        app:layout_constraintTop_toBottomOf="@id/iv_share_qr_wx_1" />

    <TextView
        android:id="@+id/tv_share_qr_wx_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="朋友圈"
        android:textColor="#333333"
        android:textSize="@dimen/sp_16"
        app:layout_constraintLeft_toLeftOf="@id/iv_share_qr_wx_2"
        app:layout_constraintRight_toRightOf="@id/iv_share_qr_wx_2"
        app:layout_constraintTop_toBottomOf="@id/iv_share_qr_wx_2" />

    <TextView
        android:id="@+id/tv_share_qr_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="保存到手机"
        android:textColor="#333333"
        android:textSize="@dimen/sp_16"
        app:layout_constraintLeft_toLeftOf="@id/iv_share_qr_save"
        app:layout_constraintRight_toRightOf="@id/iv_share_qr_save"
        app:layout_constraintTop_toBottomOf="@id/iv_share_qr_save" />

    <View
        android:id="@+id/line_share_qr"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#999999"
        app:layout_constraintTop_toBottomOf="@id/tv_share_qr_wx_1"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_share_qr_cancel"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_48"
        android:background="@drawable/bg_btn_select"
        android:gravity="center"
        android:text="取消"
        android:textColor="#333333"
        android:textSize="@dimen/sp_15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line_share_qr" />
</android.support.constraint.ConstraintLayout>