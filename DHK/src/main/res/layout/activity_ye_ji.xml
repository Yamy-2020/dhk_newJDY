<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_jiaoyiliang"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/head_top_bg"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_50">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/head_text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_18" />
        </LinearLayout>

        <ImageView
            android:id="@+id/head_img_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back_blur" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/corner"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/total_tip"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:gravity="center"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/total"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:gravity="center"
                    android:textSize="@dimen/sp_25"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/gone1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_30"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="本月总量(元)"
                                android:textColor="@color/jiugongge"
                                android:textSize="@dimen/sp_13" />

                            <TextView
                                android:id="@+id/by_total"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_40"
                                android:gravity="center"
                                android:textColor="@color/black_33"
                                android:textSize="@dimen/sp_16" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="上月总量(元)"
                                android:textColor="@color/jiugongge"
                                android:textSize="@dimen/sp_13" />

                            <TextView
                                android:id="@+id/sy_total"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_40"
                                android:gravity="center"
                                android:textColor="@color/black_33"
                                android:textSize="@dimen/sp_16" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="养卡(元)"
                                android:textColor="@color/jiugongge"
                                android:textSize="@dimen/sp_13" />

                            <TextView
                                android:id="@+id/xf_total"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_40"
                                android:gravity="center"
                                android:textColor="@color/black_33"
                                android:textSize="@dimen/sp_16" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="还款(元)"
                                android:textColor="@color/jiugongge"
                                android:textSize="@dimen/sp_13" />

                            <TextView
                                android:id="@+id/hk_total"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_40"
                                android:gravity="center"
                                android:textColor="@color/black_33"
                                android:textSize="@dimen/sp_16" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="刷卡(元)"
                                android:textColor="@color/jiugongge"
                                android:textSize="@dimen/sp_13" />

                            <TextView
                                android:id="@+id/sk_total"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_40"
                                android:gravity="center"
                                android:textColor="@color/black_33"
                                android:textSize="@dimen/sp_16" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="贷偿(元)"
                                android:textColor="@color/jiugongge"
                                android:textSize="@dimen/sp_13" />

                            <TextView
                                android:id="@+id/dc_total"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_40"
                                android:gravity="center"
                                android:textColor="@color/black_33"
                                android:textSize="@dimen/sp_16" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_30"
                    android:layout_marginBottom="@dimen/dp_30"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/btn_gr2"
                            android:layout_width="@dimen/dp_120"
                            android:layout_height="@dimen/dp_50"
                            android:background="@drawable/f5conner"
                            android:gravity="center"
                            android:text="个人"
                            android:textColor="@color/blue_public"
                            android:textSize="@dimen/sp_16"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/btn_gr1"
                            android:layout_width="@dimen/dp_120"
                            android:layout_height="@dimen/dp_50"
                            android:background="@drawable/corner2"
                            android:gravity="center"
                            android:text="个人"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_16"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/btn_team2"
                            android:layout_width="@dimen/dp_120"
                            android:layout_height="@dimen/dp_50"
                            android:background="@drawable/corner2"
                            android:gravity="center"
                            android:text="团队"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_16"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/btn_team1"
                            android:layout_width="@dimen/dp_120"
                            android:layout_height="@dimen/dp_50"
                            android:background="@drawable/f5conner"
                            android:gravity="center"
                            android:text="团队"
                            android:textColor="@color/blue_public"
                            android:textSize="@dimen/sp_16"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_50"
                android:background="@drawable/corner"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:gravity="center"
                    android:text="累计推广（人）"
                    android:textColor="@color/black_33"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/textV_tuiguang_all"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:gravity="center"
                    android:textColor="@color/black_33"
                    android:textSize="@dimen/sp_25" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="实名"
                            android:textColor="@color/jiugongge"
                            android:textSize="@dimen/sp_13" />

                        <TextView
                            android:id="@+id/textV_tuiguang_shiming"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:textColor="@color/black_33"
                            android:textSize="@dimen/sp_16" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="未实名"
                            android:textColor="@color/jiugongge"
                            android:textSize="@dimen/sp_13" />

                        <TextView
                            android:id="@+id/textV_tuiguang_zhijie"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:textColor="@color/black_33"
                            android:textSize="@dimen/sp_16" />
                    </LinearLayout>
                </LinearLayout>

                <ListView
                    android:id="@+id/listView_sj"
                    android:layout_width="match_parent"
                    android:layout_height="156dp"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:scrollbars="none" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>