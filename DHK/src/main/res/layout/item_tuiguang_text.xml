<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:background="@drawable/corner"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image_home_selector"
            android:layout_width="@dimen/dp_45"
            android:background="@drawable/image_home"
            android:layout_height="@dimen/dp_45"
            android:src="@drawable/circular"/>
        <TextView
            android:layout_marginLeft="@dimen/dp_10"
            android:text="指算小助手"
            android:gravity="center|left"
            android:textColor="@color/blue_21"
            android:textSize="@dimen/sp_15"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <TextView
        android:gravity="center"
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:paddingLeft="@dimen/dp_30"
        android:paddingTop="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:textColor="@color/black_33" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">

        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/baocun"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_30"
                android:background="@drawable/corner8"
                android:gravity="center"
                android:text="分享"
                android:textColor="@color/black_33"
                android:textSize="@dimen/sp_15" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center">

            <TextView

                android:layout_marginLeft="@dimen/dp_50"
                android:id="@+id/fenxiang"
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_25"
                android:background="@drawable/corner8"
                android:gravity="center"
                android:text="复制文字"
                android:textColor="@color/blue_2e"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>