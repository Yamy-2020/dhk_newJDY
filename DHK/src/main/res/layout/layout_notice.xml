<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_16"
    android:background="@drawable/corner10"
    android:padding="@dimen/dp_1">

    <TextView
        android:id="@+id/tv_exit_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:gravity="center_horizontal"
        android:text="温馨提示"
        android:textColor="#333333"
        android:textSize="@dimen/sp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_exit_content"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_24"
        android:text="        在计划执行期间，您卡里的余额不能小于1000元（如果还款金额是1000元，那样就不能小于100，也就是10%，取整数），否则计划可能无法正常执行！"
        android:textColor="#333333"
        android:textSize="@dimen/sp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_exit_title" />

    <TextView
        android:id="@+id/tv_exit_confirm"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_24"
        android:background="@drawable/bg_bottom_left_8dp"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/blue_00"
        android:textSize="@dimen/sp_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/view_exit"
        app:layout_constraintTop_toBottomOf="@id/tv_exit_content" />

    <View
        android:id="@+id/view_exit"
        android:layout_width="1px"
        android:layout_height="@dimen/dp_0"
        android:layout_marginBottom="@dimen/dp_2"
        android:background="#EDEDED"
        app:layout_constraintBottom_toBottomOf="@id/tv_exit_cancel"
        app:layout_constraintLeft_toRightOf="@id/tv_exit_confirm"
        app:layout_constraintRight_toLeftOf="@id/tv_exit_cancel"
        app:layout_constraintTop_toTopOf="@id/tv_exit_cancel" />

    <TextView
        android:id="@+id/tv_exit_cancel"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_48"
        android:background="@drawable/bg_bottom_right_8dp"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/blue_00"
        android:textSize="@dimen/sp_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/view_exit"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:background="#EDEDED"
        app:layout_constraintBottom_toTopOf="@id/tv_exit_confirm"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>