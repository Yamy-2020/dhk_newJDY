<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_150"
    android:layout_margin="@dimen/dp_10"
    android:background="@drawable/corner8">

    <TextView
        android:id="@+id/tv_order_name_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="申请人:"
        android:textColor="#999999"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toTopOf="@id/tv_order_mobile_string"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_order_mobile_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_6"
        android:text="手机号:"
        android:textColor="#999999"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toTopOf="@id/tv_order_date_string"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_order_name_string" />

    <TextView
        android:id="@+id/tv_order_date_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_6"
        android:text="浏览时间:"
        android:textColor="#999999"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_order_mobile_string" />

    <TextView
        android:id="@+id/tv_order_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:textColor="#0085DE"
        android:textSize="@dimen/sp_21"
        app:layout_constraintBottom_toBottomOf="@id/tv_order_name_string"
        app:layout_constraintLeft_toRightOf="@id/tv_order_name_string" />

    <TextView
        android:id="@+id/tv_order_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#999999"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toBottomOf="@id/tv_order_mobile_string"
        app:layout_constraintLeft_toLeftOf="@id/tv_order_name" />

    <TextView
        android:id="@+id/tv_order_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#999999"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_order_date_string"
        app:layout_constraintLeft_toLeftOf="@id/tv_order_name" />

    <TextView
        android:id="@+id/tv_order_bank_name"
        android:layout_width="@dimen/dp_30"
        android:layout_height="match_parent"
        android:background="@drawable/corner_12dp_right"
        android:ems="1"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/dp_10"
        android:padding="@dimen/dp_5"
        android:text="中信银行"
        android:textColor="@color/white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_order_status"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/circle_order"
        android:gravity="center"
        android:text="成功"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_order_bank_name"
        app:layout_constraintTop_toTopOf="parent" />

    <widget.DashView
        android:layout_width="@dimen/dp_4"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        app:layout_constraintRight_toLeftOf="@id/tv_order_status" />
</android.support.constraint.ConstraintLayout>