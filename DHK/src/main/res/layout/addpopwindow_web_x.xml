<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/lay_no"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_350"
         android:layout_alignParentTop="true"
            android:orientation="horizontal" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="#ffffff"
            android:gravity="center|top"
            android:orientation="vertical" >
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:gravity="center"
                android:background="#ffffff"
                >
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分享到:"
                    
                    />
            </LinearLayout>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:layout_marginBottom="@dimen/dp_4"
            android:background="#ffffff"
            android:gravity="center|top"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10" >

            <LinearLayout
                android:id="@+id/layout_weixin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/addregisterweixin_new"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:layout_weight="4"
                    android:background="@drawable/ic_fx_wx" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_weight="1"
                    android:paddingTop="3dip"
                    android:text="@string/weixinfriend"
                    android:textColor="#333333" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pengyouquan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/addregisterfriend_new"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:layout_weight="4"
                    android:background="@drawable/ic_fx_py" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_weight="1"
                    android:paddingTop="3dip"
                    android:text="@string/pengyouquan"
                    android:textColor="#333333" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/baocunsj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/addregisterfriend_new1"
              android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:layout_weight="4"
                    android:background="@drawable/ic_fx_bc" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_weight="1"
                    android:paddingTop="3dip"
                    android:text="保存到手机"
                    android:textColor="#333333" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone" >

                <ImageView
                    android:id="@+id/addregistersms_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:background="@drawable/message_new" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_weight="1"
                    android:paddingTop="3dip"
                    android:text="短信"
                    android:textColor="#333333" />
            </LinearLayout>

        </LinearLayout>
           <TextView 
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_1"
               android:background="#E8E8E8"
               
               /> 
      <LinearLayout 
          android:id="@+id/lay_diss"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:gravity="center"
                android:background="#ffffff"
                >
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="取消"
                    
                    />
            </LinearLayout>      
            
        </LinearLayout>

        
    </RelativeLayout>

</LinearLayout>